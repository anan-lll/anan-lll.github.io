{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": { "@/*": ["app/.vitepress/theme/*"] },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "types": ["vite/client"]
  },
  "include": [
    "app/.vitepress/**/*.ts",
    "app/.vitepress/**/*.tsx",
    "app/.vitepress/**/*.vue",
    "node_modules/vitepress/dist/client/theme-default/components/*.vue"
  ]
}
