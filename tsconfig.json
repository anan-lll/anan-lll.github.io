{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": { "@/*": [".vitepress/theme/*"] },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    ".vitepress/**/*.ts",
    ".vitepress/**/*.tsx",
    ".vitepress/**/*.vue",
    "node_modules/vitepress/dist/client/theme-default/components/*.vue"
  ]
}
